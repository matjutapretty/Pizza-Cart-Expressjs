<div class="message {{#if messageHide}}{{messageHide}}{{else}}hidden{{/if}}" style="
position: fixed;
z-index: 1;
text-align: center;
font-size: 20pt;
font-weight: bold;
height: 100%;
width: 100%;
vertical-align: 50%;
left: 0;
top: 0;
padding-top: 20%;
background-color: {{messageClass}}">
    
    <form action="/close" method="POST"> 
            <span class="message">{{messageContent}}</span>
            <br>

            <button class="close" name="close" on type="submit">&times;</button>
        </form>

</div>

<div class="contain cart">
        <h2>Shopping Cart</h2>
        <form action="/cart" method="POST">
        <table class="cartTable">
            <tr>
                <td class="product">
                    <h3 class="product">Small Pizza</h3>
                </td>
                <td><button class="addBtn small" name="size" value="smallAdd" on type="submit">+</button></td>
                <td>
                    <h3 class="smallPizzaQty product">{{#if qty}}{{qty.smallQty}}{{else}}0{{/if}}</h3>
                </td>
                <td><button class="minusBtn small" name="size" value="smallMinus" on type="submit">-</button></td>
                <td>
                    <h3 class="product">R<span class="smallPizzaTotal">{{#if price}}{{price.smallCost}}{{else}}0.00{{/if}}</span>
                </td>
            </tr>

            <tr>
                <td class="product">
                    <h3 class="product">Medium Pizza</h3>
                </td>
                <td><button class="addBtn med" name="size" value="medAdd" on type="submit">+</button></td>
                <td>
                    <h3 class="medPizzaQty product">{{#if qty}}{{qty.medQty}}{{else}}0{{/if}}</h3>
                </td>
                <td><button class="minusBtn med" name="size" value="medMinus" on type="submit">-</button></td>
                <td>
                    <h3 class="product">R<span class="medPizzaTotal">{{#if price}}{{price.medCost}}{{else}}0.00{{/if}}</span>
                </td>
            </tr>

            <tr>
                <td>
                    <h3 class="product">Large Pizza</h3>
                </td>
                <td><button class="addBtn large" name="size" value="largeAdd" on type="submit">+</button></td>
                <td>
                    <h3 class="largePizzaQty product">{{#if qty}}{{qty.largeQty}}{{else}}0{{/if}}</h3>
                </td>
                <td><button class="minusBtn large" name="size" value="largeMinus" on type="submit">-</button></td>
                <td>
                    <h3 class="product">R<span class="largePizzaTotal">{{#if price}}{{price.largeCost}}{{else}}0.00{{/if}}</span>
                </td>
            </tr>
            

            <tr>
                <td colspan="4">
                    <h3 class="product">Total Cost</h3>
                </td>
                <td>
                    <h3 class="product">R<span class="cartTotal">{{#if price}}{{price.totalCart}}{{else}}0.00{{/if}}</span></h3>
                </td>
            </tr>
            </form>

            <tr>
                <td colspan="5">
                    <form action="/checkout" method="POST">
                    <button class="checkOut {{#if checkOut}}{{checkOut}}{{else}}hidden{{/if}}" name="checkOut" on type="submit" >Check Out</button>
                    </form>
                </td>
            </tr>
        </table>

    <div class="payOut {{#if payOut}}{{payOut}}{{else}}hidden{{/if}}">
        <form action="/pay" method="POST">
            <table class="cartTable">
                <tr>
                    <td>
                        <h3>Payment Amount:</h3>
                    </td>
                    <td class="pAmt">R<input class="payAmt" type="number" name="payAmt" value="{{payAmt}}"></td>
                </tr>
                <tr>
                    <td colspan="2">
                        <button class="payBtn" name="payBtn" on type="submit">Pay</button>
                    </td>
                </tr>
            </table>
        </form>
    </div>
    </div>



